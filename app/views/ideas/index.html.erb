<h1>Listing ideas for the Jerwood/Film and Video Umbrella Awards</h1>



<% @ideas.each do |idea| %>
  <div class="row">
    <div class="span4">
      <%= image_tag idea.picture_url, :width => '100%' if idea.picture.present?%>
      <h4><%= link_to idea.name, idea %></h4>
      <%= simple_format idea.description %>
      <br/>
      <%= link_to 'Show', idea %>
      <% if can?(:manage, idea) %>
        <%= link_to 'Edit', edit_idea_path(idea) %>
        <%= link_to 'Destroy', idea, method: :delete, data: { confirm: 'Are you sure?' } %>
        <% end %>
    </div>
  <div/>
<% end %>
<% if can?(:manage, @ideas) %>
  <%= link_to 'New Idea', new_idea_path %>
<% end %>